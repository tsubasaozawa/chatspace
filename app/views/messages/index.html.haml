%body
  .flash-box
  .wrapper
    .chat-side
      .side-header
        .side-header__box
          %h3.side-header__box__user-name
            = current_user.name
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
              = link_to new_group_path do
                = fa_icon 'pencil-square-o', class: 'icon'
            %li.side-header__box__menu__edit-user
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
      .groups
        - current_user.groups.each do |group|
          .group
            = link_to group_messages_path(group) do
              .group__group-name
                = group.name
              .group__latest-message
                = group.show_last_message
                
    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group
            = @group.name
          %ul.main-header__left-box__member-list
            Memberï¼š
            %li.main-header__left-box__member-list__member
              -  @group.users.each do |user|
                = user.name

        =link_to edit_group_path(@group), class: "edit_id" do
          .main-header__edit-btn Edit
      .messages
        = render partial: 'message', collection: @messages

      .form
        = form_for [@group, @message], html: {class: "new_message"} do |f|
          .input-box
            = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
            = f.label :image, class: 'input-box__image' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'input-box__image__file'

          = f.submit 'Send', class: 'submit-btn'